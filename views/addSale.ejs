<form id="saleForm"  action="/addSale" method="POST">
    <label>Unesite postotak smanjenja cijene:</label>
    <div class="form-group">
        <input type="text" name="percentage" class="form-control" id="" aria-describedby="emailHelp" placeholder="Postotak">
    </div>
    <label for="exampleInputEmail1">Unesite prijasnju cijenu artikla </label>
    <input type="number"  name="priceBefore"class="form-control" onchange="setTwoNumberDecimal" min="0" max="25" step="0.05" value="0.00" />

    <label>Za koji artikal unosite akciju: </label>
    <select multiple="" class="form-control" name="whichArticle">
        <%for (let i =0;i<articles.length;i++){%>
        <option value="<%=articles[i].name%>"><%=articles[i].name%> </option>
        <option> <%=articles[i].price%> </option>

        <%}%>

    </select>
    <div class="form-group row">
        <label for="example-date-input" class="col-2 col-form-label">Unesite datum pocetka akcije:</label>
        <div class="col-10">
            <input class="form-control" type="date" value="2011-08-19" name="date_from">
        </div>
    </div>
    <div class="form-group row">
        <label for="example-date-input" class="col-2 col-form-label">Unesite datum zavrsetka akcije:</label>
        <div class="col-10">
            <input class="form-control" type="date" value="2011-08-19" name="date_until">
        </div>
    </div>
    <button type="submit" class="btn btn-primary" onclick="updateArticlePrice()">Izvrsite smanjenje cijene</button>

</form>







<script>
    function updateArticlePrice(){
        $.ajax({
